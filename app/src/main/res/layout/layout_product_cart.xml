<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_view_layout_product_cart_user_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/text_view_layout_product_cart_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:text="New Text"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/accent_material_light"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/image_view_layout_product_cart_user_logo"
            android:layout_toEndOf="@+id/image_view_layout_product_cart_user_logo"
            android:layout_toStartOf="@+id/text_view_layout_product_cart_status"
            android:layout_toLeftOf="@+id/text_view_layout_product_cart_status"
            tools:ignore="PrivateResource" />

        <TextView
            android:id="@+id/text_view_layout_product_cart_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/text_view_layout_product_cart_name"
            android:layout_alignLeft="@+id/text_view_layout_product_cart_name"
            android:layout_alignStart="@+id/text_view_layout_product_cart_name"
            android:text="New Text"
            android:textColor="#808080"
            android:textSize="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_layout_product_cart_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/text_view_layout_product_cart_email"
            android:layout_alignLeft="@+id/text_view_layout_product_cart_email"
            android:layout_alignStart="@+id/text_view_layout_product_cart_email"
            android:text="New Text"
            android:textColor="#808080"
            android:textSize="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="New Text"
            android:id="@+id/text_view_layout_product_cart_status"
            android:textColor="@color/green_footer"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        
        <View
            android:id="@+id/view_layout_product_cart_superior"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:layout_below="@+id/image_view_layout_product_cart_user_logo"
            android:background="@color/gray_item_menu" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linear_Layout_layout_product_cart_items"
            android:layout_below="@id/view_layout_product_cart_superior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_view_layout_product_cart_price"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_action_money"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/text_view_layout_product_cart_price_label"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VALOR TOTAL:"
                android:textSize="12sp"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/image_view_layout_product_cart_price"
                android:layout_toEndOf="@+id/image_view_layout_product_cart_price"
                tools:ignore="PrivateResource" />

            <TextView
                android:id="@+id/text_view_layout_product_cart_price_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/text_view_layout_product_cart_price_label"
                android:layout_alignStart="@+id/text_view_layout_product_cart_price_label"
                android:text="R$ 0,00"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"/>
                
</RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_view_layout_product_cart_item"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_menu_order"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/text_view_layout_product_cart_item_label"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL ITEMS:"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:textColor="@color/gray"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/image_view_layout_product_cart_item"
                    android:layout_toEndOf="@+id/image_view_layout_product_cart_item"
                    tools:ignore="PrivateResource" />

                <TextView
                    android:id="@+id/text_view_layout_product_cart_item_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_below="@+id/text_view_layout_product_cart_item_label"
                    android:layout_alignStart="@+id/text_view_layout_product_cart_item_label"
                    android:text="0 ITEMS"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"/>

            </RelativeLayout>

        </LinearLayout>
        
        
        <View
            android:id="@+id/view_layout_product_cart_inferior"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:layout_below="@+id/linear_Layout_layout_product_cart_items"
            android:background="@color/gray_item_menu" />

        <LinearLayout
            android:layout_below="@+id/view_layout_product_cart_inferior"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_height="45dp">


            <Button
                android:id="@+id/button_view_item_order_add"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginRight="5dp"
                android:text= "@string/msg_card_to_view_event_save"
                android:textColor="@color/accent_material_light"
                tools:ignore="PrivateResource,RtlSymmetry" />

            <Button
                android:id="@+id/button_view_item_product_clear"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:text= "@string/msg_card_to_view_event_clear"
                android:textColor="@color/accent_material_light"
                tools:ignore="PrivateResource,RtlSymmetry" />

        </LinearLayout>
            </RelativeLayout>

</android.support.v7.widget.CardView>
